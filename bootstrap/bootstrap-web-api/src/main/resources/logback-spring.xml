<?xml version="1.0" encoding="UTF-8"?>
<!--
    Logback Configuration - Spring Boot Template Project

    Features:
    - Development: Human-readable console output with colors
    - Production: JSON structured logging for CloudWatch/ELK/Datadog
    - Observability: traceId/spanId/errorCode correlation via MDC
    - CloudWatch Metric Filter ready

    MDC Keys (set by application):
    - traceId: Distributed tracing ID (OpenTelemetry/X-Ray)
    - spanId: Current span ID
    - requestId: Unique request identifier
    - userId: Authenticated user ID
    - errorCode: Domain error code (for Metric Filter)
-->
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ============================================ -->
    <!-- Application Properties (from application.yml) -->
    <!-- ============================================ -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="template-api"/>
    <springProperty scope="context" name="APP_ENV" source="spring.profiles.active" defaultValue="local"/>

    <!-- ============================================ -->
    <!-- Console Pattern for Development             -->
    <!-- ============================================ -->
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg [traceId=%X{traceId:-N/A}, spanId=%X{spanId:-N/A}, errorCode=%X{errorCode:-}]%n"/>

    <!-- ============================================ -->
    <!-- Development Profile (local, test, default)  -->
    <!-- Human-readable format for debugging         -->
    <!-- ============================================ -->
    <springProfile name="local,test,default">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${CONSOLE_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- Application packages - adjust to your package name -->
        <logger name="com.ryuqq" level="DEBUG"/>

        <!-- Spring Framework -->
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="org.springframework.security" level="INFO"/>

        <!-- Hibernate SQL (Development only) -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>
    </springProfile>

    <!-- ============================================ -->
    <!-- Production Profile (prod, staging)          -->
    <!-- JSON structured logging for CloudWatch/ELK  -->
    <!-- ============================================ -->
    <springProfile name="prod,staging">
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <!-- ================================ -->
                <!-- MDC Fields (Application에서 설정)  -->
                <!-- ================================ -->
                <includeMdcKeyName>traceId</includeMdcKeyName>
                <includeMdcKeyName>spanId</includeMdcKeyName>
                <includeMdcKeyName>requestId</includeMdcKeyName>
                <includeMdcKeyName>userId</includeMdcKeyName>
                <includeMdcKeyName>errorCode</includeMdcKeyName>

                <!-- ================================ -->
                <!-- Static Custom Fields            -->
                <!-- ================================ -->
                <customFields>{"service":"${APP_NAME}","environment":"${APP_ENV}"}</customFields>

                <!-- ================================ -->
                <!-- Timestamp (ISO 8601 for CloudWatch) -->
                <!-- ================================ -->
                <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampPattern>

                <!-- ================================ -->
                <!-- Field Names (CloudWatch/ELK 호환) -->
                <!-- ================================ -->
                <fieldNames>
                    <timestamp>@timestamp</timestamp>
                    <message>message</message>
                    <logger>logger</logger>
                    <level>level</level>
                    <thread>thread</thread>
                    <stackTrace>stack_trace</stackTrace>
                </fieldNames>

                <!-- ================================ -->
                <!-- Stack Trace Configuration       -->
                <!-- ================================ -->
                <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                    <maxDepthPerThrowable>30</maxDepthPerThrowable>
                    <maxLength>4096</maxLength>
                    <shortenedClassNameLength>20</shortenedClassNameLength>
                    <exclude>sun\.reflect\..*</exclude>
                    <exclude>java\.lang\.reflect\..*</exclude>
                    <exclude>jdk\.internal\..*</exclude>
                    <rootCauseFirst>true</rootCauseFirst>
                </throwableConverter>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>

        <!-- Application packages - adjust to your package name -->
        <logger name="com.ryuqq" level="INFO"/>

        <!-- Reduce Framework verbosity -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>

        <!-- AWS SDK -->
        <logger name="software.amazon.awssdk" level="WARN"/>
        <logger name="io.awspring.cloud" level="WARN"/>

        <!-- Netty (for WebClient) -->
        <logger name="io.netty" level="WARN"/>
        <logger name="reactor.netty" level="WARN"/>
    </springProfile>

</configuration>
