{
    "hooks": {
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/session-tracker.sh"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/rule-checker-hook.sh '{{tool_input}}'"
                    },
                    {
                        "type": "command",
                        "command": ".claude/hooks/auto-commit-hook.sh '{{tool_input}}'"
                    }
                ]
            },
            {
                "matcher": "Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/rule-checker-hook.sh '{{tool_input}}'"
                    },
                    {
                        "type": "command",
                        "command": ".claude/hooks/auto-commit-hook.sh '{{tool_input}}'"
                    }
                ]
            },
            {
                "matcher": "MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/rule-checker-hook.sh '{{tool_input}}'"
                    },
                    {
                        "type": "command",
                        "command": ".claude/hooks/auto-commit-hook.sh '{{tool_input}}'"
                    }
                ]
            }
        ]
    }
}
